<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewRunActivity"
    android:layoutDirection="ltr"
    android:background="@color/light_blue_50"




    >





    <fragment

        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        />

    <ImageButton
        android:layout_width="@dimen/icon_size_50dp"
        android:layout_height="@dimen/icon_size_50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/icon_size_50dp"
        android:layout_alignParentLeft="true"
        android:id="@+id/start_button"
        android:foreground="@drawable/start"
        android:background="@drawable/background_white"
        />


    <ImageButton

        android:layout_width="@dimen/icon_size_50dp"
        android:layout_height="@dimen/icon_size_50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:layout_alignParentLeft="true"

        android:visibility="visible"
        android:id="@+id/pause_button"
        android:background="@drawable/background_white"
        android:foreground="@drawable/pause"
        />


    <ImageButton
        android:layout_width="@dimen/icon_size_50dp"
        android:layout_height="@dimen/icon_size_50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/icon_size_50dp"
        android:layout_alignParentLeft="true"


        android:visibility="visible"
        android:id="@+id/stop_button"
        android:background="@drawable/background_white"
        android:foreground="@drawable/stop"

        />


    <RelativeLayout
        android:layout_marginTop="10dp"
        android:id="@+id/time_layout"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="120dp"
        android:layout_centerHorizontal="true"

        >
        <TextView
            android:id="@+id/time"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"

            android:text="00:00 "
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="20sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/time"
            android:text="time"
            android:textStyle="bold"
            android:textColor="#616161"
            android:textSize="11sp"
            android:layout_margin="5dp"

            />
    </RelativeLayout>



    <RelativeLayout
        android:layout_marginTop="10dp"
        android:id="@+id/distance_layout"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
android:layout_alignParentRight="true"
        android:layout_marginRight="100dp"
        >
        <TextView
            android:id="@+id/distance"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"

            android:text="00.00 "
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="20sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="8dp"
            android:text="km"
            android:maxLines="1"
            android:minLines="1"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="11sp"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/distance"
            android:text="distance"
            android:textStyle="bold"
            android:textColor="#616161"
            android:textSize="11sp"
            android:layout_margin="5dp"

            />
    </RelativeLayout>



    <RelativeLayout
        android:layout_marginTop="10dp"
        android:id="@+id/speed_layout"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:layout_below="@id/distance_layout"
        android:layout_marginLeft="50dp"


        >
        <TextView
            android:id="@+id/speed"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="00.00 "
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="20sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="8dp"
            android:text="km/h"
            android:maxLines="1"
            android:minLines="1"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="11sp"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/speed"
            android:text="speed"
            android:textStyle="bold"
            android:textColor="#616161"
            android:textSize="11sp"
            android:layout_margin="5dp"

            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:id="@+id/avg_speed_layout"
        android:layout_width="75dp"
        android:layout_height="60dp"
        android:layout_below="@id/distance_layout"
        android:layout_marginRight="50dp"
        android:layout_alignParentRight="true"


        >
        <TextView
            android:id="@+id/averageSpeed"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="00.00 "
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="20sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="8dp"
            android:text="km/h"
            android:maxLines="1"
            android:minLines="1"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="11sp"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/averageSpeed"
            android:text="average speed"
            android:textStyle="bold"
            android:maxLines="1"
            android:minLines="1"
            android:textColor="#616161"
            android:textSize="10sp"
            android:layout_margin="5dp"

            />
    </RelativeLayout>


</RelativeLayout>